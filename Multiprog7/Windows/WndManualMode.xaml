                    </Grid>
                </Border>


            </Grid>

            <Grid Grid.Row="5">
                <Button
                    x:Name="BtnApply"
                    Content="Применить"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Height="40" 
                    Width="186"
                    Grid.Column="1"
                    Click="BtnApply_Click">
                    <Button.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource BtnActiveMode}">
                            <Setter Property="FontSize" Value="16"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

        </Grid>
    </Border>
    

</Window>
