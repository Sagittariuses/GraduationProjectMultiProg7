                               Grid.Column="1"
                               Foreground="#333333" 
                               FontSize="12px" 
                               VerticalContentAlignment="Center"
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
                            <Label x:Name="LbFwVerSecond"
                               Content="00.00" 
                               Grid.Column="2"
                               Foreground="#333333" 
                               FontSize="12px" 
                               VerticalContentAlignment="Center" 
                               FontWeight="Normal"
                               Margin="0,5,0,0"/>
